{
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "semi": [2, "never"],
      "no-var": 2,
      "strict": "off",
      "no-extra-semi": 2,
      "comma-spacing": [1, { "before": false, "after": true }]
    }
  }